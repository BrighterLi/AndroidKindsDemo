<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaoming.functionvideorecordingandfacerecognition">

    <!-- 硬件支持 -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.arcface.ArcFaceActivity" />
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.videorecord.RecordActivity" />
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.videorecord2.RecordActivity2" />
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.arcface.VivoDetectionActivity" />
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.vivodetection.VivoDetectActivity" />
        <activity android:name="com.xiaoming.functionvideorecordingandfacerecognition.vivodetection.DetectionActivity"></activity>
    </application>

</manifest>