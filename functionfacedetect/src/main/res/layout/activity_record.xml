<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".videorecord.RecordActivity">

    <LinearLayout
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <com.xiaoming.functionvideorecordingandfacerecognition.videorecord.view.CustomSurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="88dp"
            android:background="@drawable/shape_record_video_surfaceview"/>
        <TextView
            android:id="@+id/tv_tip_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="98dp"
            android:text="请将你的脸放在相框内"
            android:textSize="18sp"
            android:textColor="#050C1C"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="98dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <!-- android:src="@drawable/ic_launcher_foreground"-->

            <Button
                android:id="@+id/btn_start_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"/>

            <Button
                android:id="@+id/btn_play_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="0" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>