<?xml version="1.0" encoding="utf-8"?>
<com.xiaoming.view.customview.commheader.CommHeader xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mCommHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:background="#FF07A6F8">

    <View
        android:id="@+id/mVStatusBar"
        android:layout_width="match_parent"
        android:layout_height="0px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:textSize="42sp"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:text="你好，新朋友"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:textSize="13sp"
            android:textColor="#FFFFFFFF"
            android:text="登录最高可领取额度"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_login_btn_unEnable"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp">
                <TextView
                    android:id="@+id/mPriceSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#FFFFFFFF"
                    android:text="¥"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_toRightOf="@+id/mPriceSymbol"
                    android:layout_marginLeft="4dp"
                    android:text="50000.00"
                    android:textColor="#FFFFFFFF"
                    android:textSize="42sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <LinearLayout
                android:layout_alignParentTop="true"
                android:layout_width="83dp"
                android:layout_height="26dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:text="登录/注册"
                    android:textSize="13sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    </com.xiaoming.view.customview.commheader.CommHeader>