<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".webviewlinked.demo2.ScrollViewActivity2">

    <include layout="@layout/layout_web_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.33dp"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xiaoming.a008project.webviewlinked.demo2.MyScrollView2
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <com.xiaoming.a008project.webviewlinked.demo2.MyWebView2
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/layout_bottom_list" />

            </LinearLayout>

        </com.xiaoming.a008project.webviewlinked.demo2.MyScrollView2>

    </FrameLayout>

</LinearLayout>