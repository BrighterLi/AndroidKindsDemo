<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoming.androidknowledgepoints.uiframe.EnterUiFrameActivity">

    <Button
        android:id="@+id/bt_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView"/>
    <Button
        android:id="@+id/bt_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView"/>
    <Button
        android:id="@+id/bt_scrollview_tablayout_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScrollView+TabLayout_ViewPager_RecyclerView"/>
    <Button
        android:id="@+id/bt_water_fall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="瀑布流"/>
</LinearLayout>
